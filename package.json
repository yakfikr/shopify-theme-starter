{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "yakfikr",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i css/main.tailwind.css -o assets/main.tailwind.css",
    "build:js": "node esbuild.config.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "npx @tailwindcss/cli -i css/main.tailwind.css -o assets/main.tailwind.css --watch",
    "watch:js": "node esbuild.config.js --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"shopify theme dev\"",
    "build:prod": "NODE_ENV=production npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "idiomorph": "^0.7.4"
  }
}
